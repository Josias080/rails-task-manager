
<h1>My Tasks</h1>

<%= form_for(@tasks) do |f| %>
  <div class="form-group">
    <%= f.label :title %>
    <%= f.text_field :title, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :details %>
    <%= f.text_field :details, class: 'form-control' %>
  </div>

  <%= f.submit class: 'btn btn-primary' %>
<% end %>

<i class="fas fa-undo"></i> <%= link_to "Back to list", tasks_path %>
